{
    "presets": [
        ["env", { "targets": { "node": 6 }, "useBuiltIns": true }],
        "latest",
        "stage-0",
        "react"
    ],
    "plugins": ["transform-decorators-legacy", "transform-runtime", "add-module-exports"],
    "env": {
        "production": {
            "presets": ["react-optimize"],
            "plugins": ["babel-plugin-dev-expression"]
        },
        "development": {
            "plugins": [
                "tcomb"
            ],
            "presets": ["react-hmre"]
        },
        "test": {
            "plugins": [
                ["webpack-loaders", { "config": "webpack.config.test.js", "verbose": false }]
            ]
        }
    }
}